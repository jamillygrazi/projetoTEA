<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginProfessorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/funfo"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="125px"
        android:paddingEnd="125px">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            app:srcCompat="@drawable/logo_tea1" />

        <Button
            android:id="@+id/buttonEditarAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Aluno"
            android:textColor="#FFFFFF"
            app:backgroundTint="#7ED857" />

        <Button
            android:id="@+id/buttonListarAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Alunos"
            android:textColor="#FFFFFF"
            app:backgroundTint="#7ED857" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="50px"
        android:paddingTop="50px"
        android:paddingRight="50px"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textViewBoasVindas"
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:shadowColor="#000000"
            android:shadowRadius="7"
            android:text=" OlÃ¡, "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F8F8F8"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSettings"
            android:layout_width="49dp"
            android:layout_height="48dp"
            android:background="@drawable/button_oval"
            android:drawableBottom="@drawable/baseline_settings_24"
            android:paddingLeft="2dp"
            android:paddingBottom="12dp" />

    </LinearLayout>

</FrameLayout>